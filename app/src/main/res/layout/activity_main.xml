<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.intenciones.MainActivity"
    android:orientation="vertical">

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Abrir página Web"
        android:id="@+id/web"
        android:onClick="webSite" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Llamada de teléfono"
        android:id="@+id/telefono"
        android:onClick="callPhone" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Google Maps"
        android:id="@+id/googlemaps"
        android:onClick="googleMaps" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tomar foto"
        android:id="@+id/foto"
        android:onClick="takePhoto" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Mandar correo"
        android:id="@+id/correo"
        android:onClick="sendEmail" />
</LinearLayout>
